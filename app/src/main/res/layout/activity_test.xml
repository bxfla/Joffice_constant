                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="投诉转办"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvCompliain"
                style="@style/numTextView"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:id="@+id/llJZGC"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:padding="8dp"
                    android:src="@drawable/flow_item16"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="新建工程"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvJZGC"
                style="@style/numTextView"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:id="@+id/llInstall"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:padding="8dp"
                    android:src="@drawable/flow_item22"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="安装改造"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvInstall"
                style="@style/numTextView"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:id="@+id/llReceiveDinner"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/flow_item15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="接待用餐"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvReceiveDinner"
                style="@style/numTextView"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:id="@+id/llContractSign"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:padding="8dp"
                    android:src="@drawable/flow_item18"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="合同签订"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvContractSign"
                style="@style/numTextView"/>
        </FrameLayout>
    </com.hy.powerplatform.my_utils.myViews.FixGridLayout>

</android.support.constraint.ConstraintLayout>
